<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="kasper.android.custom_twitter.activities.RegisterActivity">

    <RelativeLayout
        android:id="@+id/activity_register_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:id="@+id/activity_register_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <EditText
                    android:id="@+id/activity_register_user_title_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="textPersonName"
                    android:hint="نام نمایشی کاربر"
                    android:gravity="center"
                    android:layout_marginTop="44dp"
                    android:textColor="#000"
                    android:layout_marginBottom="60dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@drawable/rectound_white"
            android:elevation="4dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/activity_register_content_container"
            android:layout_marginBottom="-44dp"
            android:text="ثبت نام"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="20sp"
            android:textColor="#000"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:layout_below="@id/activity_register_content_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-44dp"
            android:src="@drawable/done"
            android:tint="#000"
            android:onClick="onRegisterBtnClicked"/>

    </RelativeLayout>

</RelativeLayout>
