<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/adapter_profile_tweet_author_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Human"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/adapter_profile_tweet_delete_image_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/delete"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/adapter_profile_tweet_content_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tweet content..."
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:minHeight="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/adapter_tweet_like_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/like"/>

                <TextView
                    android:id="@+id/adapter_tweet_likes_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="112"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingRight="8dp"/>

                <FrameLayout
                    android:layout_width="0.25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#666"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>

                <ImageButton
                    android:id="@+id/adapter_tweet_comment_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/comment"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/adapter_profile_tweet_comment_container1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/adapter_profile_tweet_comment_author_text_view1"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:text="Human"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"/>

                        <TextView
                            android:id="@+id/adapter_profile_tweet_comment_content_text_view1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:text="Comment Content"
                            android:minHeight="32dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/adapter_profile_tweet_comment_container2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/adapter_profile_tweet_comment_author_text_view2"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:text="Human"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"/>

                        <TextView
                            android:id="@+id/adapter_profile_tweet_comment_content_text_view2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:text="Comment Content"
                            android:minHeight="32dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/adapter_profile_tweet_comment_container3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/adapter_profile_tweet_comment_author_text_view3"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:text="Human"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"/>

                        <TextView
                            android:id="@+id/adapter_profile_tweet_comment_content_text_view3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:text="Comment Content"
                            android:minHeight="32dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>